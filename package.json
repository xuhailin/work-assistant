{
    "name": "work-assistant",
    "version": "0.0.1",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"vite\" \"wait-on http://localhost:5173\"",
        "start": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 npx electron .",
        "build": "vite build",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.xuhailin.workassistant",
        "mac": {
            "target": "dmg",
            "category": "public.app-category.productivity"
        },
        "files": [
            "dist/**",
            "electron/**",
            "package.json"
        ]
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.0.0",
        "autoprefixer": "^10.4.0",
        "concurrently": "^8.0.0",
        "cross-env": "^7.0.3",
        "electron": "^32.0.0",
        "electron-builder": "^24.0.0",
        "postcss": "^8.4.0",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vue": "^3.4.0",
        "wait-on": "^7.0.1"
    },
    "dependencies": {
        "echarts": "^6.0.0",
        "vue-router": "^4.5.1"
    }
}
